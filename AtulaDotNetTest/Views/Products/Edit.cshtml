@model AtulaDotNetTest.Models.Entities.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Sku" class="control-label"></label>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="SelectedCategoryIds">Categories</label>
                @Html.ListBoxFor(model => model.SelectedCategoryIds, (MultiSelectList)ViewBag.Categories, new { @class = "form-control", size = 5 })
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
}
